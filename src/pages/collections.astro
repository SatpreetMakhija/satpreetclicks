---
// Welcome to Astro! Everything between these triple-dash code fences
// is your "component frontmatter". It never runs in the browser.
import BaseLayout from "../components/baseLayout.astro";
import HorizontalGallery from "../components/horizontalGallery.astro";

var commonImagesPath = "/images/";

const streetImages = [
	{ src: commonImagesPath + "portrait-man-in-shadows.jpg" },
	{ src: commonImagesPath + "portrait-newspaper-man.jpg" },
	{ src: commonImagesPath + "portrait-flowers.jpg" },
	{ src: commonImagesPath + "portrait-cylinder-man.jpg" },
];

const peopleImages = [
	{ src: commonImagesPath + "portrait-amma-pink-saree-2.jpg" },
	{ src: commonImagesPath + "portrait-girl-blue-shirt-orange-phone.jpg" },
	{ src: commonImagesPath + "portrait-creamy-hair-blue-shirt-boy.jpg" },
];
---

<!-- Below is your "component template." It's just HTML, but with
    some magic sprinkled in to help you build great templates. -->
<BaseLayout title="Collections">
	<HorizontalGallery images={streetImages} name="Streets" />
	<HorizontalGallery images={peopleImages} name="People" />
</BaseLayout>
